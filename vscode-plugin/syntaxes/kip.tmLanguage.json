{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Kip",
  "scopeName": "source.kip",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.kip",
          "match": "--.*$"
        },
        {
          "name": "comment.block.kip",
          "begin": "\\(\\*",
          "end": "\\*\\)"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.kip",
          "match": "\"(?:[^\"\\\\]|\\\\.)*\"(?:'?\\p{L}+)?"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.kip",
          "match": "\\b[0-9]+(?:\\.[0-9]+)?(?:'?\\p{L}+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.kip",
          "match": "\\b(ya|ya\\s+da|olsun|için|ise|değilse)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.kip",
          "match": "\\b\\p{L}+(?:-\\p{L}+)*(?:'?\\p{L}+)?\\b"
        }
      ]
    }
  }
}
